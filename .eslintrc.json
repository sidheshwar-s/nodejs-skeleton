{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": ["prettier", "airbnb-base"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "prettier/prettier": ["error"],
        "quotes": [
            2,
            "single",
            { "avoidEscape": true, "allowTemplateLiterals": true }
        ],
        "indent": ["error", 4]
    }
}
